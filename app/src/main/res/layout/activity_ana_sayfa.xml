<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnaSayfa">


    <TextView
        android:id="@+id/KullaniciAdiAnasayfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ListView
        android:id="@+id/islerListesi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
        <Button
        android:id="@+id/bittiButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/islerListesi">

    </Button>
        <Button
            android:id="@+id/silButon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bittiButon">

        </Button>
</RelativeLayout>

</LinearLayout>