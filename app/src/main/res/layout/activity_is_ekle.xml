<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".isEkle">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10.000 m^2 Halı || Genç Halı"
        android:textColor="#000000"
        android:textSize="30dp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#6F000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="ÜRÜN BİLGİSİ"
        android:textColor="#C21C1C"
        android:textSize="30dp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#6F000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/kumasUzunlugu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üretilecek Kumaş Uzunluğu:"
            android:textColor="#3F51B5"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/kUzunluk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-7dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/kumasUzunlugu"
            android:hint="Kumaş Uzunluk"></EditText>

        <TextView
            android:layout_below="@+id/kumasUzunlugu"
            android:layout_marginTop="20dp"
            android:id="@+id/TeslimTarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teslim Tarihi:"
            android:textColor="#3F51B5"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/ttarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kumasUzunlugu"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/TeslimTarihi"
            android:hint="..../..../........"></EditText>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#6F000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/ıplikturu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pamuk : "
        android:textColor="#3F51B5"
        android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/PamukDeger"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="% olarak değer giriniz"
            android:layout_toRightOf="@id/ıplikturu"
            android:layout_marginBottom="20dp">
        </EditText>

        <TextView
            android:layout_below="@id/ıplikturu"
            android:layout_marginTop="20dp"
            android:id="@+id/ıplikturu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Polyester : "
            android:textColor="#3F51B5"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/polyesterTur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ıplikturu"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/ıplikturu2"
            android:hint="% olarak değer giriniz"></EditText>

        <TextView
            android:layout_below="@id/ıplikturu2"
            android:layout_marginTop="20dp"
            android:id="@+id/ıplikturu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keten : "
            android:textColor="#3F51B5"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/ketenTur"
            android:layout_below="@id/ıplikturu2"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="% olarak değer giriniz"
            android:layout_toRightOf="@id/ıplikturu3"
            android:layout_marginBottom="20dp">
        </EditText>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#6F000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harcanan İplik Miktarı"
        android:textColor="#C21C1C"
        android:gravity="center"
        android:textSize="30dp"
        android:padding="5dp">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Harcananip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="12.850 kg "
            android:textColor="#000000"
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/Harcananip1"
            android:padding="5dp"
            android:text="Pamuk"
            android:textColor="#000000"
            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/Harcananip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Harcananip1"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="     1.80 kg "
            android:textColor="#000000"
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Harcananip1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/Harcananip1"
            android:text="Polyester"
            android:textColor="#000000"
            android:textSize="25dp"></TextView>





        <Button
            android:id="@+id/btnKaydet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kaydet"
            android:textSize="20dp">

        </Button>
    </RelativeLayout>


</LinearLayout>